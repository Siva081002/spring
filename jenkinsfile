pipeline {
    agent any

    triggers {
        githubPush()
    }

    tools {
        maven 'maven'
    }

    environment {
        SONARQUBE_URL = 'http://52.56.61.24:9000'
        SONARQUBE_TOKEN = credentials('sonarqube')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: 'github', url: 'https://github.com/Siva081002/spring.git'
                sh 'ls -la'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                sh """
                mvn sonar:sonar \
                  -Dsonar.projectKey=springboot-demo \
                  -Dsonar.host.url=http://52.56.61.24:9000 \
                  -Dsonar.login=$SONARQUBE_TOKEN
                """
            }
        }

        stage('Deploy') {
            steps {
                sh """
                nohup java -jar target/simple-siva-hello-1.0.0.jar --server.port=9000 > app.log 2>&1 &
                """
            }
        }
    }
}
